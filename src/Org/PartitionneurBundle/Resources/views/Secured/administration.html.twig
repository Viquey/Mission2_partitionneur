{% extends "::layout.html.twig" %}

{% block title parent() ~ "Administration" %}
    
{% block content %}
    
    {% block javascript %}
        {% if app.request.get('userCreated') == 'true'%}       
            <script type="text/javascript">alert('Professeur créé.');</script>       
        {% endif %}
        
        {% if app.request.get('classeCreated') == 'true'%}
            <script type="text/javascript">alert('Classe créée.');</script>
        {% endif %}
        
        {% if app.request.get('mdpChanged') == 'true'%}
            <script type="text/javascript">alert('Mot de passe changé !');</script>
        {% endif %}
        
        {% if app.request.get('csvUploaded') == 'true'%}
            <script type="text/javascript">alert('L\'envoi du fichier .csv est un succès !');</script>
        {% endif %}
    {% endblock %}
    
    <center>Page d'administration</center>
    <ul>
        <li><a href='{{ path('_addUser')}}'>Ajouter un professeur</a></li>
        <li><a href='{{ path('_addClasse')}}'>Ajouter une classe</a></li>
        <li><a href='{{ path('_uploadCsv')}}'>Upload de fichier Csv</a></li>
        <li><a href='{{ path('_updateMdp')}}'>Changer votre mot de passe</a></li> 
    </ul>
{% endblock %}