{% extends "::layout.html.twig" %}

{% block title parent() ~ "Liste des utilisateurs" %}
    
{% block content %}
    <h2>Utilisateurs</h2>
    <table cellspacing="2px" cellpadding="2px" rules="all" style="border:solid 1px black">
        <tr>
            <th>Username</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Role</th>
            <th>E-mail</th>
            <th>Classe</th>
        </tr>
    {% for user in users %}
        <tr>
            <td>{{user.username}}</td>
            <td>{{user.nom}}</td>
            <td>{{user.prenom}}</td>
            <td>
                {% for group in user.groups %}
                    {{group.name}}
                {% endfor %}
            </td>
            <td>{{user.email}}</td>
            <td>
                {% for classe in user.classes %}
                    {{classe.name~" | "}}
                {% endfor %}
            </td>
        </tr>   
    {% endfor %}
    </table>

{% endblock %}

